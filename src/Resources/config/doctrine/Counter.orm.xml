<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <mapped-superclass name="SimplyStream\SoulsDeathBundle\Entity\Counter" table="souls_counter"
                       repository-class="App\Repository\CounterRepository">
        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <field name="deaths" type="integer"/>

        <field name="cause" length="255"/>

        <field name="alias" length="255"/>

        <field name="successful" type="boolean"/>

        <many-to-one field="section" inversed-by="deaths"/>
    </mapped-superclass>
</doctrine-mapping>
