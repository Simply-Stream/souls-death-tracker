<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="SimplyStream\SoulsDeathBundle\Entity\Tracker">
        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <field name="name" length="255"/>

        <field name="commandName" length="255"/>

        <many-to-one field="game"/>

        <many-to-one field="owner" inversed-by="trackers"
                     target-entity="Symfony\Component\Security\Core\User\UserInterface"/>

        <one-to-many field="sections" target-entity="App\Entity\Section" mapped-by="tracker"/>
    </entity>
</doctrine-mapping>
